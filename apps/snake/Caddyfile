:80 {
    root * /usr/share/caddy
    file_server
    
    # Handle /snake path - serve from /snake subdirectory
    handle_path /snake* {
        root * /usr/share/caddy/snake
        try_files {path} /index.html
    }
    
    # Root access - serve from root
    handle {
        try_files {path} /index.html
    }
}